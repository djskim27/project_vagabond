<!-- Picture carousel for homepage -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
     
    </ol>

    <div class="carousel-inner">
        <div class='carousel-item active'>
            <%= image_tag('https://i.imgur.com/t7gFkwr.jpg?1', class: '#d-block w-100') %>
             <div class="carousel-caption d-none d-md-block">
                <h2 class="text-shadow front-page-font">Welcome to RoamR!</h2>
            </div>
        </div>
        
        <% @cities.each_with_index do |city, index| %>
            <%= content_tag :div, class: 'carousel-item'  do %>
                <%= link_to city_path(city) do %>
                     <%= image_tag(city.img_url, class: '#d-block w-100') %>
                <% end %>
                <%= content_tag :div, class: "carousel-caption d-none d-md-block" do %>
                    <h1 class='city-title'><%=city.name.split.map(&:capitalize).join(' ') %></h1>
                <% end %>
            <% end %>
        <%end%>
    </div>

    <div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div> 
</div>


<br/>


<!-- maps out a button for each city in database -->
<div class='text-center featured-cities-container'>
    <h3 class='featured-city'><%=icon('globe', class: 'strong globe')%> "To travel is to live." <%=icon('globe', class: 'strong globe')%></h3>
</div>
<div class='map'>
    <% my_url = "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=1" %>
    <% @cities.each do |location| %>
        <% my_url += "&markers=#{location.latitude}%2C#{location.longitude}" %>    
    <% end %>
    <%= image_tag my_url %>
</div>
<br/>
<div class='city-container'>
    <% @cities.each do |city| %>
        <div>
            <%=link_to city_path(city) do%>
            <%=button_tag city.name.split.map(&:capitalize).join(' '), class:'btn custom-btn link-text'%>
            <%end%>
        </div>
    <%end%>
</div>



<div>
<%=image_tag 'http://weknowyourdreams.com/images/travel/travel-07.jpg', :style => "width: 100%"%>
</div>
<div class='text-center'>
    <h3>Cities</h3>
</div>
<ul>
<% @cities.each do |city| %>
    <li>
        <%=link_to city.name.split.map(&:capitalize).join(' '), city_path(city)%>
    </li>
<%end%>
</ul>